#!/bin/bash

set -e

if openssl verify -untrusted /etc/apache2/ca-chain.pem /etc/apache2/cert.pem &>/dev/null; then
  echo "$0 [`date`]: Apache certificate is valid." 
  exit 0
else
  echo "$0 [`date`]: Apache certificate expired. Installing new certificate and restarting apache" 
  cp -f /etc/letsencrypt/live/roster.np3m.org/cert.pem /etc/apache2/cert.pem
  cp -f /etc/letsencrypt/live/roster.np3m.org/privkey.pem /etc/apache2/privkey.pem
  cp -f /etc/letsencrypt/live/roster.np3m.org/fullchain.pem /etc/apache2/ca-chain.pem
  apache2ctl graceful
fi

exit 0
